<div class="container">
	<div class="row justify-content-center">
			<div class="col-10">
				<%= render 'shared/errors', obj: @article %>
				<%= form_for @article, html: {class: "shadow p-3 mb-3 bg-info rounded"} do |form| %>	
					<div class="form-group row mb-3">		
						<%= form.label :title, class: "col-2 col-form-label text-light"%>	
						<div class="col-10">			
							<%= form.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article"%>
						</div>
					</div>

					<div class="form-group row mb-3">		
						<%= form.label :description, class: "col-2 col-form-label text-light"%>	
						<div class="col-10">			
							<%= form.text_area :description, rows: 10,  class: "form-control shadow rounded", placeholder: "Description of article"%>
						</div>
					</div>

					<div class="form-group row mb-3">		
						<%= form.label :category, class: "col-2 col-form-label text-light"%>	
						<div class="col-10">
							<%= form.collection_select(:category_ids, Category.all, :id, :name,
							{prompt: "Make your selection from the list below (can be empty)" }, {:multiple => true, :size =>4, :class => "form-select"}) %>			
						</div>
					</div>

					<div class="form-group text-center">
						<%= form.submit class: "btn btn-outline-light btn-lg"%>
					</div>
				<% end %>
			</div>
			
			<%= link_to '[ Cancel & Return to articles listing ]' , articles_path, class: "text-info text-center" %>
	</div>		
</div>

