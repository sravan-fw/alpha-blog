<h1 class= "text-center mt-4"> <%= t('activerecord.attributes.sign_in.login')%> </h1>

<div class="container">
	<div class="row justify-content-center">
			<div class="col-10">
				<%= form_for :session, url: login_path, html: {class: "shadow p-3 mb-3 bg-info rounded"} do |form| %>	
					<div class="form-group row mb-3">		
						<%= form.label  t('activerecord.attributes.sign_in.email'), class: "col-2 col-form-label text-light"%>	
						<div class="col-10">			
							<%= form.email_field :email, rows: 10,  class: "form-control shadow rounded", placeholder: "Enter emailid"%>
						</div>
					</div>

					<div class="form-group row mb-3">		
						<%= form.label t('activerecord.attributes.sign_in.password'), class: "col-2 col-form-label text-light"%>	
						<div class="col-10">			
							<%= form.password_field :password, rows: 10,  class: "form-control shadow rounded", placeholder: "Choose a password"%>
						</div>
					</div>

					<div class="form-group text-center">
						<%= form.submit t('activerecord.attributes.sign_in.signin'), class: "btn btn-outline-light btn-lg" %>
					</div>
				<% end %>
			</div>
			
			<%= link_to '[ Cancel & Return Home ]' , root_path, class: "text-info text-center" %>
	</div>		
</div>



