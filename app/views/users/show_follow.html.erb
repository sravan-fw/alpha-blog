<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.username %> <%= @title %></h1>
    </section>
    <section class="stats">
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= user.username %><br>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
</div>